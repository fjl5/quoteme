{
    "name": "QuoteMe",
    "description": "__MSG_extensionDescription__",
    "homepage_url": "https://github.com/fjl5/quoteme",
    "author": "Achim Leitner",
 
    "manifest_version": 3,
    "version": "2.0.0",
    "default_locale": "en",

    "browser_specific_settings": {  //FF
        "gecko": {                  //FF
            "id": "quoteme@fjl.de"  //FF
        }                           //FF
    },                              //FF
                                    //FF
    "icons": {
        "16": "icons/quote-16.png",
        "32": "icons/quote-32.png",
        "48": "icons/quote-48.png",
        "96": "icons/quote-96.png",
        "128": "icons/quote-128.png"
    },

    "permissions": [
        "storage", "scripting", "activeTab", "contextMenus"
    ],

    "options_ui": {
        "page": "options.html"
    },

    "action": {
        "default_icon": {
            "16": "icons/quote-16.png",
            "32": "icons/quote-32.png"
        },
        "default_title": "QuoteMe [Ctrl]+[E]"
    },

    "commands": {
        "quote_block": {
            "suggested_key": { "default": "Ctrl+E" }, //FF
            //CHROME "suggested_key": { "default": "Alt+B" },
            "description": "Quote the selected text block"
        },
        "quote_inline": {
            "suggested_key": { "default": "Alt+M" },
            "description": "Quote the selected text string"
        }
    },

    "background": {
        "scripts": ["background.js"]        //FF
        //CHROME "service_worker": "background.js"
    }
}
